<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorOnSecondary">#1D1F26</item>
        <item name="dividerColor">#2A2B39</item>
        <item name="itemFillColor">#CCCCCC</item>
        <item name="colorTertiary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">#CCCCCC</item>
    </style>

    <style name="Theme.HomeScreen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ageRangeSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="haloColor">@android:color/transparent</item>
        <item name="thumbRadius">10dp</item>
        <item name="thumbStrokeWidth">3dp</item>
        <item name="trackHeight">10dp</item>
        <item name="thumbColor">?attr/colorOnSecondary</item>
        <item name="thumbStrokeColor">?attr/colorPrimary</item>
        <item name="tickVisible">false</item>
        <item name="trackColorActive">?attr/colorPrimary</item>
        <item name="labelStyle">@style/ageRangeSliderStyleLabel</item>
        <item name="labelBehavior">visible</item>
        <item name="trackColorInactive">?attr/dividerColor</item>

<!--        TODO: Need to add minSeparation between thumbs-->

    </style>

    <style name="ageRangeSliderStyleLabel" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="customTextView">  // Used to style textViews containing interests of person when profile is clicked
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:background">@drawable/custom_btn_2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">15dp</item>
    </style>


</resources>