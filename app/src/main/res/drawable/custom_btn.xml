<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- Background color when not pressed -->
            <solid android:color="?attr/colorOnSecondary" />
            <!-- Stroke color when not pressed -->
            <stroke android:width="2dp" android:color="?attr/colorPrimary" />
            <!-- Corner radius -->
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <!-- Stroke color when pressed -->
            <stroke android:width="2dp" android:color="?attr/colorOnSecondary" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>
